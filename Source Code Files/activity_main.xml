<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#E7F9F5F7"
    android:orientation="vertical"
    tools:context=".MainActivity">
<ImageView
    android:layout_marginLeft="100dp"
    android:src="@drawable/trstc"
    android:layout_width="120dp"
    android:layout_height="120dp" />
    <TextView
        android:text="WELCOME TO TSRTC"
        android:layout_marginLeft="69dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="30dp"
        android:textSize="21dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/usrmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:textColorHint="#FF09090A"
        android:hint="Enter your e-mail"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="#FF09090A"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/loginbtn"
        android:onClick="login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/stylebutton"
        android:text="Login"
        android:layout_marginRight="1dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_marginLeft="12dp"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="29dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New?Register Now!"
            android:textAllCaps="false"
            android:onClick="register"
            android:layout_marginLeft="87dp"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>